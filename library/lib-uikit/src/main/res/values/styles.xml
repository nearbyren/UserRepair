<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.App" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/transparent</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="android:windowAnimationStyle">@style/activityAnim</item>
<!--        <item name="android:windowBackground">@color/white</item>-->
        <!-- 设置无标题
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">?android:windowNoTitle</item>-->
    </style>

    <style name="activityAnim">
        <item name="android:activityOpenEnterAnimation">@anim/jump_enter_anim</item>
        <item name="android:activityOpenExitAnimation">@anim/jump_exit_anim</item>
        <item name="android:activityCloseEnterAnimation">@anim/finish_enter_anim</item>
        <item name="android:activityCloseExitAnimation">@anim/finish_exit_anim</item>
        <item name="android:taskOpenEnterAnimation">@anim/jump_enter_anim</item>
        <item name="android:taskOpenExitAnimation">@anim/jump_exit_anim</item>
        <item name="android:taskCloseEnterAnimation">@anim/finish_enter_anim</item>
        <item name="android:taskCloseExitAnimation">@anim/finish_exit_anim</item>


        <!--        <item name="android:activityOpenEnterAnimation">@null</item>
                <item name="android:activityOpenExitAnimation">@null</item>
                <item name="android:activityCloseEnterAnimation">@null</item>
                <item name="android:activityCloseExitAnimation">@null</item>
                <item name="android:taskOpenEnterAnimation">@null</item>
                <item name="android:taskOpenExitAnimation">@null</item>
                <item name="android:taskCloseEnterAnimation">@null</item>
                <item name="android:taskCloseExitAnimation">@null</item>-->

        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@null</item>
    </style>


    <!--通用Dialog-->
    <style name="lib_uikit_CommonDialog" parent="@android:style/Theme.Dialog">
        <!--是否去除标题 -->
        <item name="android:windowNoTitle">true</item>
        <!--是否去除边框-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无背景 -->
        <item name="android:background">@null</item>
        <!--窗口背景透明-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 去除黑色边框的关键设置项 -->
        <item name="android:windowContentOverlay">@null</item>
        <!--弹窗背景是否变暗-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!--通用的背景透明Dialog-->
    <style name="lib_uikit_TransparentDialog" parent="lib_uikit_CommonDialog">
        <!--弹窗背景是否变暗-->
        <item name="android:backgroundDimEnabled">false</item>
    </style>


    <!--从底部弹出动画-->
    <style name="lib_uikit_anim_InBottom_OutBottom">
        <item name="android:windowEnterAnimation">@anim/lib_uikit_bottom_popup_in</item>
        <item name="android:windowExitAnimation">@anim/lib_uikit_bottom_popup_out</item>
    </style>

    <!--弹出键盘Dialog-->
    <style name="EEditTextDialog" parent="lib_uikit_CommonDialog">
        <item name="android:windowSoftInputMode">stateAlwaysVisible</item>
    </style>

</resources>